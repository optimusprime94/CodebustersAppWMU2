<Page
    x:Class="CodebustersAppWMU2.Details"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodebustersAppWMU2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image Source="Assets/bgimage1.jpg" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

        <TextBlock x:Name="TaskDetail" 
                   HorizontalAlignment="Center" 
                   Margin="10,46,10,0" 
                   TextWrapping="Wrap" 
                   Text="Task" 
                   VerticalAlignment="Top" 
                   Height="49" Width="340" FontSize="36" Foreground="#FFD53939" FontWeight="Bold"/>
        <TextBlock x:Name="Description" HorizontalAlignment="Left" Margin="10,223,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="205" Width="340" Foreground="White" FontSize="22"/>
        <TextBlock x:Name="Startdate" HorizontalAlignment="Left" Margin="10,165,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="0.425,-1.567" Width="170" Foreground="White" FontSize="22"/>
        <TextBlock x:Name="Deadline" HorizontalAlignment="Left" Margin="180,165,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="170" Foreground="White" FontSize="22" TextAlignment="Right"/>

    </Grid>
</Page>
